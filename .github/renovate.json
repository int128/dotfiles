{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>int128/renovate-base",
    "helpers:pinGitHubActionDigests"
  ],
  "packageRules": [
    {
      "description": "Disable minimumReleaseAge for digest updates to avoid pending forever",
      "matchDepNames": [
        "debian"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "minimumReleaseAge": "0"
    }
  ]
}
